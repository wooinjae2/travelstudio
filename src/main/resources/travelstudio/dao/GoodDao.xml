  <resultMap type="good" id="goodMap">
    <id column="mno" property="mno"/>
    <result column="postno" property="postno"/>
    <result column="gcnt" property="gcnt"/>
  </resultMap> 

 <insert id="insert" parameterType="good">
    insert into good(mno, postno, gcnt)
    values(#{mno}, #{postno}, #{gcnt})
  </insert>
  
   <select id="searchBymnopostno" resultMap="goodMap" parameterType="good">
  	select * from good where(mno=#{mno} and postno=#{postno})
  </select> 
  
   <delete id="delete" parameterType="good">
    delete from good 
    where (mno=#{mno} and postno=#{postno})
  </delete>
  
