 <insert id="insert" parameterType="String" 
          useGeneratedKeys="true" keyColumn="picno">
    insert into pic(path)
    values(#{filename})
  </insert>
  
    <insert id="insert1" parameterType="picture" 
          useGeneratedKeys="true" keyColumn="picno">
    insert into pic(path, lati, longit, time)
    values(#{path}, #{lati}, #{longit}, #{time})
  </insert>

  <insert id="insertAllPhoto" parameterType="picture" 
          useGeneratedKeys="true" keyColumn="picno">
    insert into pic(path, lati, longit, time, sno)
    values(#{path}, #{lati}, #{longit}, #{time}, #{sortno})
  </insert>
